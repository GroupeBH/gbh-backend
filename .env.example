APP_ENV=development
SERVER_ADDR=:8080
MONGO_URI=mongodb://localhost:27017/gbh
# MONGO_DB est optionnel si la DB est déjà dans MONGO_URI (ex: .../gbh)
MONGO_DB=
# Frontend autorisé pour CORS (cookies). Supporte une liste CSV via FRONTEND_ORIGINS.
FRONTEND_ORIGIN=http://localhost:3000
FRONTEND_ORIGINS=http://localhost:3000
RATE_LIMIT_APPOINTMENTS=10
RATE_LIMIT_CONTACT=5
RATE_LIMIT_WINDOW_SEC=60
TZ=Africa/Kinshasa
REDIS_URL=redis://localhost:6379/0
REDIS_ADDR=localhost:6379
REDIS_PASSWORD=
REDIS_DB=0
CACHE_TTL_SECONDS=60
ADMIN_API_KEY=change-me
# Clé utilisée par POST /api/admin/register pour le bootstrap admin.
ADMIN_SETUP_KEY=change-me-bootstrap
# ADMIN_USER / ADMIN_PASSWORD servent au seed de l'admin (collection users).
ADMIN_USER=admin
ADMIN_EMAIL=admin@gbh.sarl
ADMIN_PASSWORD=change-me-too
# Admin secondaire (optionnel)
ADMIN_USER_2=admin2
ADMIN_EMAIL_2=admin2@gbh.sarl
ADMIN_PASSWORD_2=change-me-three
JWT_SECRET=change-this-secret
ACCESS_TTL_MINUTES=15
REFRESH_TTL_MINUTES=43200
COOKIE_SECURE=false
BREVO_API_KEY=
BREVO_SENDER_EMAIL=
BREVO_SENDER_NAME=
BREVO_SANDBOX=false
